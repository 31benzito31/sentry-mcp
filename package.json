{
  "name": "mcp-github-oauth",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "dev": "vite",
    "deploy": "npm exec wrangler deploy",
    "eval": "vitest --config=vitest.eval.config.ts",
    "eval:ci": "vitest run --config=vitest.eval.config.ts --coverage --reporter=junit --outputFile=eval.junit.xml",
    "format": "biome format --write",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "inspector": "pnpx @modelcontextprotocol/inspector@latest",
    "preview": "vite preview",
    "start:stdio": "tsx src/mcp/start-stdio.ts",
    "cf-typegen": "wrangler types",
    "postinstall": "simple-git-hooks",
    "test": "vitest",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=tests.junit.xml",
    "test:watch": "vitest watch"
  },
  "devDependencies": {
    "@ai-sdk/openai": "^1.3.16",
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/vite-plugin": "^1.0.8",
    "@cloudflare/vitest-pool-workers": "^0.8.18",
    "@cloudflare/workers-types": "^4.20250417.0",
    "@sentry/vite-plugin": "^3.3.1",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.4",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.0",
    "@vitest/coverage-v8": "^3.1.1",
    "ai": "^4.3.9",
    "better-sqlite3": "^11.9.1",
    "dotenv": "^16.5.0",
    "lint-staged": "^15.5.1",
    "msw": "^2.7.4",
    "simple-git-hooks": "^2.12.1",
    "tailwindcss": "^4.1.4",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.1",
    "vitest": "^3.1.1",
    "vitest-evals": "^0.1.5",
    "wrangler": "^4.12.0"
  },
  "dependencies": {
    "@cloudflare/workers-oauth-provider": "^0.0.2",
    "@modelcontextprotocol/sdk": "^1.9.0",
    "@sentry/cloudflare": "^9.13.0",
    "@sentry/react": "^9.13.0",
    "agents": "~0.0.60",
    "better-sqlite3": "^11.9.1",
    "hono": "^4.7.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "workers-mcp": "0.1.0-3",
    "zod": "^3.24.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "biome format --write --no-errors-on-unmatched --files-ignore-unknown=true",
      "biome lint --fix --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "better-sqlite3",
      "esbuild",
      "sharp",
      "simple-git-hooks",
      "workerd"
    ]
  }
}
