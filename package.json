{
  "name": "mcp-github-oauth",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc",
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "format": "biome format --write",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "inspector": "pnpx @modelcontextprotocol/inspector@latest",
    "start": "wrangler dev",
    "start:stdio": "tsx dist/mcp/start-stdio.js",
    "cf-typegen": "wrangler types",
    "postinstall": "simple-git-hooks",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/vitest-pool-workers": "^0.8.11",
    "@types/node": "^22.14.0",
    "@vitest/coverage-v8": "^3.1.1",
    "lint-staged": "^15.5.0",
    "simple-git-hooks": "^2.12.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1",
    "wrangler": "^4.7.2"
  },
  "dependencies": {
    "@cloudflare/workers-oauth-provider": "^0.0.2",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@sentry/cloudflare": "^9.11.0",
    "agents": "~0.0.53",
    "hono": "^4.7.5",
    "just-pick": "^4.2.0",
    "marked": "^15.0.7",
    "workers-mcp": "0.1.0-3",
    "zod": "^3.24.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "**/*.{ts,tsx,json}": ["biome format --write"],
    "**/*.{ts,tsx}": ["biome lint --fix"]
  }
}
